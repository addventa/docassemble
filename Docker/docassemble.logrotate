/data/share/docassemble/log/docassemble.log
/data/share/docassemble/log/apache_access.log
/data/share/docassemble/log/apache_error.log
/data/share/docassemble/log/nginx_access.log
/data/share/docassemble/log/nginx_error.log
/data/share/docassemble/log/uwsgi.log
/data/share/docassemble/log/websockets.log
/data/share/docassemble/log/worker.log
/data/share/docassemble/log/single_worker.log
{
        su www-data www-data
	create 600 www-data www-data
	rotate 7
	maxsize 5M
	daily
	missingok
	notifempty
	postrotate
	        if ls /var/run/uwsgi/docassemble.sock > /dev/null ; then supervisorctl --serverurl http://localhost:9001 start reset > /dev/null ; fi
		if supervisorctl --serverurl http://localhost:9001 status syslogng | grep -q RUNNING ; then supervisorctl --serverurl http://localhost:9001 restart syslogng > /dev/null ; fi
	endscript
}
/var/log/supervisor/* {
        daily
        missingok
	size 5M
        rotate 7
        notifempty
	create 600 root root
}
